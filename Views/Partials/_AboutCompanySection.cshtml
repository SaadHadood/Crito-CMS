@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@using Umbraco.Cms.Core.Models

<!-- about company -->
<section class="about">
    <div class="container">
        <div class="daria">
            
            @{
                var aboutCompanyImage = Model.Value<MediaWithCrops>("aboutCompanySectionImage");
                if (aboutCompanyImage != null) 
                {
                    <img src="@aboutCompanyImage.MediaUrl()" alt="@Model.Value("aboutCompanySectionImageHeading")" />
                }
            }

            <div class="box">
                <h1>@Model.Value("aboutCompanySectionImageHeading") <span>Founder</span></h1>
                <p>@Model.Value("aboutCompanySectionImageDescription")</p>
            </div>
        </div>
        <div class="content">

            <span>@Model.Value("aboutCompanySectionHeading")</span>
            <h1>@Model.Value("aboutCompanySectionTitle")</h1>
            <p>@Model.Value("aboutCompanySectionDescription")</p>

            <div class="play-circle">
                <a class="btn-yellow" href="services.html">Learn More<i class="fa-regular fa-arrow-up-right"></i></a>
                <a href="@Model.Value("aboutCompanySectionButtonUrl")" target="_blank"><i class="fa-thin fa-circle-play"></i></a>
                <a>@Model.Value("aboutCompanySectionButtonText")</a>
            </div>
        </div>
    </div>
</section>